<h1>Authors</h1>
<table class="table table-striped">
	<thead>
   <tr>
     <th>Author</th>
     <th>Action</th>
   </tr> 
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %> <%= author.last_name %></td>
        <td><%= link_to "Edit", edit_author_path(author) %> | <%= link_to "Delete", author_path(author), method: :delete, data: {confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
