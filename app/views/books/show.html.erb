<div id="books-show">
  <h2><%= @book.title %></h2>
  <div id="books-show-left">
    <%= image_tag @book.cover_path %>
  </div>
  <div id="book-show-right">
    <h3>Book info:</h3>
    <ul>
      <li><strong>Category: </strong><%= @book.category.name if !@book.category.nil? %></li>
      <li><strong>Author: </strong><%= @book.author.first_name if !@book.author.nil? %> <%= @book.author.last_name if !@book.author.nil? %></li>
      <li><strong>Publisher: </strong><%=@book.publisher.name if !@book.publisher.nil?%></li>
      <li><strong>Year: </strong><%= @book.year %></li>
      <li><strong>ISBN: </strong><%= @book.isbn %></li>
      <li><strong>Format: </strong><%= @book.format %></li>
      <li><strong>Page: </strong><%= @book.pages %></li>
    </ul>
    <%= link_to "Buy now for " + @book.price, "#", class: "btn btn-success", target: "_blank" %>
  </div>
  <div class="clearfix"></div>
  <h4>Excerpt</h4>
  <p><%= @book.excerpt %></p>	
  <h3>Admin Function</h3>
  <%= link_to "Edit", edit_book_path(@book)%> | <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}%>
</div>