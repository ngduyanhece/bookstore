<h1>Categories</h1>
<table class="table table-striped">
	<thead>
   <tr>
     <th>Category</th>
     <th>Action</th>
   </tr> 
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "Edit", edit_category_path(category) %> | <%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>
