<div id="books-index">
	<div class="row">
  <% @books.each_slice(4) do |four_book| %>
    <% four_book.each do |book| %>
      <div class="col-md-3 col-sm-3">
        <h3><%= book.title %></h3>
        <%= image_tag book.cover_path %>
        <%= link_to 'Read More', book_path(book), class: "btn btn-primary" %>
    </div>
    <% end %>
  <% end %>
  </div>
</div>