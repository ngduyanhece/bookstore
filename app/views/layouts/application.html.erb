<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title.nil? ? "Cat Bookstore" : "#{@page_title} | Cat Bookstore" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/nav' %>
  <header>
    <div class="container">
      <h2>BookStore</h2>
    </div>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
        <%= yield %>
      </div>
      <div class="col-md-4">
        <%= render 'layouts/sidebar' %>
      </div>
    </div>
  </div>
  <footer>
    <div class="container">
      <p>Copyright @copy; 2015 Kevin Nguyen</p>
    </div>
  </footer>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
